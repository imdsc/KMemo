<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/createMemoButton"
            android:contentDescription="@string/cre_memo_des"
            android:layout_marginEnd="52dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="onCreateMemoButtonClick"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="368dp"
            android:layout_height="391dp"
            android:id="@+id/EditMemoRV" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/createMemoButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@android:layout/simple_list_item_activated_2"/>
</android.support.constraint.ConstraintLayout>